# Description: Python module for processing plaintext documentation
# URL:         http://pypi.python.org/pypi/docutils
# Maintainer:  Andy Kosela, akosela at andykosela dot com

name=python-docutils
version=0.14
release=1
source=(https://files.pythonhosted.org/packages/source/${name:7:1}/${name#*-}/${name#*-}-$version.tar.gz)

build() {
	cd ${name#*-}-$version
	python setup.py build
	python setup.py install --prefix=/usr --root=$PKG --optimize=1
}
